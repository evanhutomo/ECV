<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.mrcpp.ecv.MiniCalcActivity">


    <LinearLayout
        android:id="@+id/ll1"
        android:orientation="vertical"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        >

        <TextView
            android:id="@+id/tvVal1"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="value1"
            android:textSize="15sp"
            android:textColor="#454545"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/etVal1"
            android:numeric="decimal"
            android:imeOptions="actionNext"
            android:layout_width="200dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVal1"
            />

        <TextView
            android:id="@+id/tvVal2"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="value2"
            android:textSize="15sp"
            android:textColor="#454545"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/etVal2"
            android:numeric="decimal"
            android:imeOptions="actionNext"
            android:layout_width="200dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tvVal3"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="value3"
            android:textSize="15sp"
            android:textColor="#454545"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/etVal3"
            android:numeric="decimal"
            android:imeOptions="actionNext"
            android:layout_width="200dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            />


        <TextView
            android:id="@+id/tvAvg"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="Average (value1 + value3 + value3 / 3)"
            android:textSize="15sp"
            android:textColor="#454545"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tvAvgResult"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:textColor="#22af87"
            android:text="0"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/tvLong"
            android:layout_below="@id/tvLatResult"
            />


        <Button
            android:id="@+id/btnCount"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Count"
            android:textSize="25sp"
            android:textColor="#999"
            />
    </LinearLayout>
</ScrollView>