<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/tvECVTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Enhance Color Visibility"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/tvECVCounterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginBottom="40dp"
        android:text="Counter"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvECVTitle"
        />

    <Button
        android:id="@+id/btnCamera"
        android:textSize="25dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Start scan"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#22af87"
        android:layout_below="@+id/tvECVCounterTitle"
        />

    <Button
        android:id="@+id/btnAbout"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="about"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#656565"
        android:layout_below="@+id/btnCamera"
        />
</RelativeLayout>
